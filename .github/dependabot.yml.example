version: 2
updates:
  # npm, yarn 등 JavaScript/Node.js 패키지
  - package-ecosystem: "npm"
    directory: "/"
    schedule:
      interval: "weekly"

  # pip, poetry 등 Python 패키지
  - package-ecosystem: "pip"
    directory: "/"
    schedule:
      interval: "weekly"

  # Maven Java 패키지
  - package-ecosystem: "maven"
    directory: "/"
    schedule:
      interval: "weekly"

  # Gradle Java 패키지
  - package-ecosystem: "gradle"
    directory: "/"
    schedule:
      interval: "weekly"

  # Go 모듈
  - package-ecosystem: "gomod"
    directory: "/"
    schedule:
      interval: "weekly"

  # Ruby gems
  - package-ecosystem: "bundler"
    directory: "/"
    schedule:
      interval: "weekly"

  # Cargo Rust 패키지
  - package-ecosystem: "cargo"
    directory: "/"
    schedule:
      interval: "weekly"

  # NuGet .NET 패키지
  - package-ecosystem: "nuget"
    directory: "/"
    schedule:
      interval: "weekly"

  # Composer PHP 패키지
  - package-ecosystem: "composer"
    directory: "/"
    schedule:
      interval: "weekly"

  # Terraform 모듈
  - package-ecosystem: "terraform"
    directory: "/"
    schedule:
      interval: "weekly"

  # pub Dart/Flutter 패키지
  - package-ecosystem: "pub"
    directory: "/"
    schedule:
      interval: "weekly"

  # Helm 차트
  - package-ecosystem: "helm"
    directory: "/"
    schedule:
      interval: "weekly"
